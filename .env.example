# Application
APP_NAME=OpenStatica
APP_VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://openstatica:password@localhost:5432/openstatica
REDIS_URL=redis://localhost:6379

# Storage
UPLOAD_PATH=./uploads
MODEL_CACHE_PATH=./models

# ML Features
ENABLE_ML=true
ENABLE_GPU=false
HUGGINGFACE_TOKEN=your-huggingface-token-here

# Compute
MAX_WORKERS=4
COMPUTATION_TIMEOUT=300

# Plugins
ENABLE_PLUGINS=true
PLUGIN_PATH=./plugins